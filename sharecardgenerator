<body>
  <h2>ðŸ“¤ Share Card Generator</h2>
  <input type="file" id="imageInput" accept="image/*" />
  <input type="text" id="title" placeholder="Device Name" />
  <input type="text" id="price" placeholder="Price (e.g. Rs.60000)" />
  <textarea id="description" rows="3" placeholder="Description"></textarea>
  
  <div id="preview-container">
    <div id="whatsappCard" class="card">
      <img id="productImg" src="" alt="Preview" />
      <div class="info">
        <div class="title" id="productTitle"></div>
        <div class="price" id="productPrice"></div>
        <div class="desc" id="productDesc"></div>
      </div>
    </div>
    <div id="instagramCard" class="card" style="margin-top: 20px;">
      <img id="productImgInsta" src="" alt="Preview" />
      <div class="info">
        <div class="title" id="productTitleInsta"></div>
        <div class="price" id="productPriceInsta"></div>
        <div class="desc" id="productDescInsta"></div>
        <div class="brand">SellInSeconds.in</div>
      </div>
    </div>
  </div>

  <button onclick="downloadCard('whatsappCard', 'whatsapp-card')">Download for WhatsApp</button>
  <button onclick="downloadCard('instagramCard', 'instagram-card')">Download for Instagram</button>

  <script>
    const imageInput = document.getElementById('imageInput');
    const titleInput = document.getElementById('title');
    const priceInput = document.getElementById('price');
    const descInput = document.getElementById('description');

    imageInput.addEventListener('change', e => {
      const file = e.target.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = () => {
          document.getElementById('productImg').src = reader.result;
          document.getElementById('productImgInsta').src = reader.result;
        };
        reader.readAsDataURL(file);
      }
    });

    [titleInput, priceInput, descInput].forEach(el => {
      el.addEventListener('input', () => {
        document.getElementById('productTitle').textContent = titleInput.value;
        document.getElementById('productPrice').textContent = priceInput.value;
        document.getElementById('productDesc').textContent = descInput.value;

        document.getElementById('productTitleInsta').textContent = titleInput.value;
        document.getElementById('productPriceInsta').textContent = priceInput.value;
        document.getElementById('productDescInsta').textContent = descInput.value;
      });
    });

    function downloadCard(cardId, filename) {
      const card = document.getElementById(cardId);
      html2canvas(card).then(canvas => {
        const link = document.createElement('a');
        link.download = filename + '.jpg';
        link.href = canvas.toDataURL('image/jpeg', 0.95);
        link.click();
      });
    }
  </script>
</body>
</html>
