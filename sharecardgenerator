<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Share Card Generator</title>
  <script src="https://cdn.jsdelivr.net/npm/html2canvas@1.4.1/dist/html2canvas.min.js"></script>
  <style>
    body { font-family: sans-serif; background: #f4f4f4; padding: 20px; }
    input, textarea, button { width: 100%; margin: 10px 0; padding: 10px; font-size: 16px; }
    .card {
      width: 300px;
      border-radius: 10px;
      overflow: hidden;
      background: white;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      text-align: center;
      position: relative;
    }
    .card img { width: 100%; display: block; }
    .info { padding: 10px; }
    .title { font-weight: bold; font-size: 18px; }
    .price { color: green; font-size: 16px; margin: 5px 0; }
    .desc { font-size: 14px; color: #555; }
    .brand {
      position: absolute;
      bottom: 10px;
      right: 10px;
      font-size: 12px;
      background: rgba(0,0,0,0.7);
      color: white;
      padding: 3px 6px;
      border-radius: 4px;
    }
    #preview-container { text-align: center; margin: 20px 0; }
  </style>
